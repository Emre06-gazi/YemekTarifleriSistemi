@model IEnumerable<YemekTarifSistemi.Models.YemekTarifleri>

@{
    ViewData["Title"] = "Tarifler";
    Layout = "~/Views/Shared/_yönetimTema.cshtml";
}


<h1>Tarifler</h1>

<p>
    <a asp-action="TarifEkle">Yeni Tarif Ekle</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>
                ID
            </th>
            <th>
                Yemek Adı
            </th>
            <th>
                Yemek Tarifi
            </th>
            <th>
                Aktif
            </th>
            <th>
                Kategori Adı
            </th>
            <th>
                Ekleme Tarihi
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.TarifId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Yemekadi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Tarif)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Aktif)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Kategori.KategoriId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Eklemetarihi)
                </td>
                <td>
                    <a asp-action="TarifGetir" asp-route-id="@item.TarifId">Güncelle</a> |  
                    <a asp-action="TarifYorumlari" asp-route-id="@item.TarifId">Yorumlar</a> |
                    <a asp-action="TarifSil" asp-route-id="@item.TarifId" onclick="return confirm ('Kategoriyi silmek istiyor musun?')">Sil</a>
                </td>
            </tr>
        }
    </tbody>
</table>