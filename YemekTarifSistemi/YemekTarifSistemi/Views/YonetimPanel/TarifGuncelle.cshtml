@model YemekTarifSistemi.Models.YemekTarifleri

@{
    ViewData["Title"] = "TarifGuncelle";
    Layout = "~/Views/Shared/_yönetimTema.cshtml";
}

<h1>Tarif Güncelle</h1>

<h4>YemekTarifleri</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="TarifGuncelle">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Yemekadi" class="control-label"></label>
                <input asp-for="Yemekadi" class="form-control" />
                <span asp-validation-for="Yemekadi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Tarif" class="control-label"></label>
                <textarea asp-for="Tarif" name="Tarif"></textarea>
                <script>
                    CKEDITOR.replace("Tarif")
                </script>
                <span asp-validation-for="Tarif" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Sira" class="control-label"></label>
                <input asp-for="Sira" class="form-control" />
                <span asp-validation-for="Sira" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="KategoriId" class="control-label"></label>
                <select asp-for="KategoriId" class="form-control" asp-items="ViewBag.KategoriId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Aktif" class="control-label"></label>
                <select asp-for="Aktif" class="form-control">
                    <option value="True"> Evet </option>
                    <option value="False"> Hayır </option>
                </select>
                <span asp-validation-for="Aktif" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Güncelle" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Tarifler">Geri</a>
</div>

